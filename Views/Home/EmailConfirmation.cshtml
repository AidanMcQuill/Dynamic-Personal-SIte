@{
    ViewData["Title"] = "Email Confirmation";
}
@model CorePersonal.Models.ContactViewModel

<!-- ======= Contact Section ======= -->
<section id="contact" class="contact">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Your Email Has Been Sent</h2>
            <h4>
                Thank you for reaching out! I will respond to your message
                using the provided email address, @Model.Email, in the next 1-3 business days.
            </h4>
        </div>
        <br />
        <br />

        <div class="offset-3 col-md-6 text-center">
            <p>
                You sent the following message on
                @DateTime.Now.Date.ToShortDateString():
            </p>
        </div>

        <br />
        

        <div class="offset-3 col-md-6 text-center ">
            <p>
                <em>@Model.Message</em>
            </p>
        </div>
        <br />

        <div class="offset-3 col-md-6 text-center">
            <a href="@Url.Action("Contact", "Home")">Back To Contact</a>
        </div>

         
            

        </div>

    </div>
</section><!-- End Contact Section -->